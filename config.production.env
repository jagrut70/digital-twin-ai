# Production Configuration for Digital Twin System
# Copy this to .env and modify as needed

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# Database Configuration
DATABASE_URL=sqlite:///./digital_twin_production.db
DATABASE_ECHO=false

# Security Configuration
SECRET_KEY=your-super-secret-production-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Model Configuration
MODEL_CACHE_DIR=./models
USE_GPU=false
MODEL_DEVICE=cpu

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/production.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Synthetic Data Configuration
SYNTHETIC_DATA_ENABLED=true
SYNTHETIC_DATA_UPDATE_INTERVAL=3600

# Health Monitoring Configuration
HEALTH_CHECK_INTERVAL=300
HEALTH_ALERT_THRESHOLD=0.8

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
CACHE_TTL=3600

# External Services (if needed)
# OPENAI_API_KEY=your-openai-key
# AZURE_CONNECTION_STRING=your-azure-connection
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
