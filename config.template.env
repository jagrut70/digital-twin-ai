# Digital Twin System Configuration Template
# Copy this file to .env and fill in your actual values

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Database Settings
DATABASE_URL=sqlite:///./digital_twin.db
REDIS_URL=redis://localhost:6379

# AI/ML API Keys (Add your actual keys here)
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Synthetic Data Paths
SYNTHETIC_DATA_PATH=./data/synthetic
SYNBODY_DATASET_PATH=./data/synbody
ARIA_DATASET_PATH=./data/aria
SIPHER_DATASET_PATH=./data/sipher

# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production-12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 3D Visualization Settings
UNITY_BUILD_PATH=./visualization/unity_builds
OPENGL_VERSION=4.1

# Health Monitoring Settings
HEALTH_UPDATE_INTERVAL=60
BIOMETRIC_SAMPLING_RATE=100

# Behavior Simulation Settings
PERSONALITY_UPDATE_INTERVAL=300
DECISION_MAKING_THRESHOLD=0.7

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=./logs/digital_twin.log
